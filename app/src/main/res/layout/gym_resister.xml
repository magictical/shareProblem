<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--android:theme="@style/ThemeOverlay.AppCompat.Dark"로 툴바 글색변경가능-->

    <include
        layout="@layout/tool_bar">
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:id="@+id/resister_gym_photo_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/add_btn"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>


            <TextView
                android:id="@+id/resister_title_gym_name_"
                style="@style/roboto_font_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Gym Name"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/resister_gym_photo_image_view"/>

            <EditText
                android:id="@+id/resister_gym_name"
                style="@style/roboto_font_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/resister_title_gym_name_"/>

            <TextView
                android:id="@+id/resister_title_gym_location"
                style="@style/roboto_font_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:text="Gym Location"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/resister_gym_name"/>

            <EditText
                android:id="@+id/resister_gym_location"
                style="@style/roboto_font_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/resister_title_gym_location"/>

            <TextView
                android:id="@+id/resister_title_gym_contact"
                style="@style/roboto_font_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:text="Gym Contact"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/resister_gym_location"/>

            <EditText
                android:id="@+id/resister_gym_contact"
                style="@style/roboto_font_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/resister_title_gym_contact"/>

            <TextView
                android:id="@+id/resister_title_gym_price"
                style="@style/roboto_font_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:text="Gym Price"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/resister_gym_contact"/>

            <EditText
                android:id="@+id/resister_gym_price"
                style="@style/roboto_font_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/resister_title_gym_price"/>

            <Button
                android:id="@+id/resister_change_date"
                style="@style/roboto_font_title_text_small"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp"
                android:elevation="0dp"
                android:text="Change"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/resister_gym_photo_image_view"/>

            <TextView
                android:id="@+id/resister_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                style="@style/roboto_font_title_text_small"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="12dp"
                android:padding="0dp"
                android:text="TextView"
                app:layout_constraintEnd_toStartOf="@+id/resister_change_date"
                app:layout_constraintTop_toBottomOf="@+id/resister_gym_photo_image_view"/>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</LinearLayout>