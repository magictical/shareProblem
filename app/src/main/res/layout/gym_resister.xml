<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="2000dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/resister_gym_photo_image_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/add_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>


        <TextView
            android:id="@+id/resister_title_gym_name_"
            style="@style/roboto_font_base_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Enter Gym Name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resister_gym_photo_image_view"/>

        <EditText
            android:id="@+id/resister_gym_name"
            style="@style/roboto_font_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintDimensionRatio="w,8.5:1"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resister_title_gym_name_"/>

        <TextView
            android:id="@+id/resister_title_gym_location"
            style="@style/roboto_font_base_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Gym Location"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/resister_gym_name"/>

        <EditText
            android:id="@+id/resister_gym_location"
            style="@style/roboto_font_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/resister_title_gym_location"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="w,8.5:1"
            />

        <TextView
            android:id="@+id/resister_title_gym_contact"
            style="@style/roboto_font_base_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Gym Contact"
            app:layout_constraintTop_toBottomOf="@+id/resister_gym_location"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <EditText
            android:id="@+id/resister_gym_contact"
            style="@style/roboto_font_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/resister_title_gym_contact"
            android:layout_marginTop="8dp"
            app:layout_constraintDimensionRatio="w,8.5:1"/>

        <TextView
            android:id="@+id/resister_title_gym_price"
            style="@style/roboto_font_base_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gym Price"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/resister_gym_contact"/>

        <EditText
            android:id="@+id/resister_gym_price"
            style="@style/roboto_font_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintDimensionRatio="w,8.5:1"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/resister_title_gym_price"/>

        <Button
            android:id="@+id/add_gym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Add a Gym"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resister_gym_price"/>

        <ProgressBar
            android:id="@+id/gym_image_progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:indeterminateDrawable="@drawable/style_progressbar"
            android:progressDrawable="@drawable/style_progressbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.501"
            tools:layout_editor_absoluteY="170dp"/>


    </android.support.constraint.ConstraintLayout>

</ScrollView>