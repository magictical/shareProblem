<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tool:layout_editor_absoluteY="81dp"
        tool:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/gym_image_view"
            android:layout_width="0dp"
            android:layout_height="193dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_gym_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tool:text="In busan city, Korea"
            app:layout_constraintLeft_toRightOf="@+id/textView3"
            android:layout_marginLeft="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/text_gym_contacts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tool:text="010-1111-2222"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
            app:layout_constraintLeft_toRightOf="@+id/textView2"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@+id/text_gym_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tool:text="10$"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
            android:layout_marginRight="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="32dp"/>

        <TextView
            android:id="@+id/text_gym_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            tool:text="Gym name"
            android:layout_marginLeft="75dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView"/>


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="GYM : "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gym_image_view"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/gym_image_view"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline10"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintLeft_toLeftOf="@+id/textView"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fees"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline10"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
            android:layout_marginStart="8dp"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline10"
            android:orientation="vertical"
            app:layout_constraintGuide_end="158dp"
            tool:layout_editor_absoluteY="0dp"
            tool:layout_editor_absoluteX="202dp"/>

        <ProgressBar
            android:id="@+id/gym_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/gym_image_view"
            app:layout_constraintLeft_toLeftOf="@+id/gym_image_view"
            app:layout_constraintRight_toRightOf="@+id/gym_image_view"
            app:layout_constraintTop_toTopOf="@+id/gym_image_view"
            android:progressDrawable="@drawable/style_progressbar"
            android:indeterminateDrawable="@drawable/style_progressbar"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
